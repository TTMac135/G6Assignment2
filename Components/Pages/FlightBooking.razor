@page "/FlightFinder"

<h3>Flight Finder</h3>

<form class="form-group">

    <div class="form-group">
        <label for="departureAirport">From:</label>
        <input id="departureAirport" type="text"/>
    </div>
   
    <div class="form-group">
        <label for="arrivalAirport">To:</label>   
        <input id="arrivalAirport" type="text"/>
    </div>

    <div class="form-group">
        <label for="day">Day:</label>  
        <input id="day" type="text"/>
    </div>

    <button type="button">Find Flights</button>
</form>

